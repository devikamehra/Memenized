<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="awe.devikamehra.memenized.view.fragment.SetTextFragment">

    <android.support.design.widget.TextInputLayout
        android:paddingLeft="@dimen/padding_high"
        android:paddingStart="@dimen/padding_high"
        android:paddingRight="@dimen/padding_high"
        android:paddingEnd="@dimen/padding_high"
        android:paddingTop="@dimen/padding_high"
        android:paddingBottom="@dimen/padding_high"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/top_text"
            android:hint="@string/top_text"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:paddingLeft="@dimen/padding_high"
        android:paddingStart="@dimen/padding_high"
        android:paddingRight="@dimen/padding_high"
        android:paddingEnd="@dimen/padding_high"
        android:paddingTop="@dimen/padding_high"
        android:paddingBottom="@dimen/padding_high"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/bottom_text"
            android:hint="@string/bottom_text"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

</LinearLayout>
