<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cardview_default_elevation"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="@dimen/cardview_default_elevation"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/default_padding_small">

    <LinearLayout
        android:background="@drawable/card_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="@dimen/icon_dimen"
            android:layout_height="@dimen/icon_dimen">

            <ImageView
                android:contentDescription="@string/content_desc_font_type"
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@color/white" />

            <ImageView
                android:contentDescription="@string/content_desc_image_selector_font_type"
                android:visibility="gone"
                android:id="@+id/imageTop"
                android:src="@drawable/ic_check_black_48dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@android:color/transparent" />

        </FrameLayout>

        <TextView
            android:id="@+id/font_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/padding_low"
            android:paddingLeft="@dimen/padding_high"
            android:paddingRight="@dimen/padding_high"
            android:paddingTop="@dimen/padding_high"
            android:textColor="@android:color/black"
            android:textAppearance="?android:textAppearanceMediumInverse" />

    </LinearLayout>

</android.support.v7.widget.CardView>
