<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="awe.devikamehra.memenized.view.activity.MemeDisplayActivity"
    tools:showIn="@layout/activity_meme_display">

    <ImageView
        android:contentDescription="@string/content_desc_final_meme"
        android:id="@+id/display_image"
        android:layout_margin="@dimen/padding_high"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:padding="@dimen/padding_low"
        android:id="@+id/share"
        android:text="@string/share"
        android:clickable="false"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottombarheight" />

</FrameLayout>
